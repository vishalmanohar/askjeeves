<script>
$('#chatbox').keypress(function(event) {
    // Check the keyCode and if the user pressed Enter (code = 13) 
    if (event.keyCode == 13) {
	var msg = $('#chatbox').val();
	addToChatArea("<div><b>me: </b>" + msg +  "</div>");
	$('#chatbox').val('');
	pingJeeves(msg);
	return false;
    }
});

function addToChatArea(html) {
	$('#chatarea').append(html);
	$("#chatarea").scrollTop($("#chatarea")[0].scrollHeight);
}

function pingJeeves(msg) {
$.ajax({
  url: "ping",
  data: {'msg' : msg},
  success: function(data){
	addToChatArea("<div><b><i>Jeeves: </i></b>" + data +  "</div>");
  }
});
}
</script>
